---
/**
 * Protected page demonstrating Sprint 003 server-side authentication patterns
 * 
 * This page shows how to:
 * - Use requireAuth() to protect pages
 * - Automatically redirect unauthenticated users to sign-in
 * - Access user and session data in pages
 * - Preserve return URLs after authentication
 */

import Layout from '../layouts/Layout.astro';
import { requireAuth, getSession } from 'astro-stack-auth/server';

// Protect this page - unauthenticated users will be redirected to sign-in
const user = await requireAuth(Astro);

// Optionally get session information
const session = await getSession(Astro);

// Format dates for display
const signedUpDate = new Date(user.signedUpAtMillis).toLocaleDateString();
const sessionCreatedDate = session ? new Date(session.createdAtMillis).toLocaleString() : null;
const sessionExpiresDate = session ? new Date(session.expiresAtMillis).toLocaleString() : null;
---

<Layout title="Protected Content - Astro + Stack Auth">
  <div class="px-4 py-6 sm:px-0">
    <div class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <span class="text-2xl">üîí</span>
        <h1 class="text-3xl font-bold text-gray-900">Protected Content</h1>
      </div>
      <p class="text-gray-600">
        This page is only accessible to authenticated users. If you can see this content, 
        server-side authentication is working correctly!
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- User Information -->
      <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
          üë§ User Information
        </h2>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="font-medium text-gray-700">Display Name:</span>
            <span class="text-gray-900">{user.displayName || 'Not set'}</span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="font-medium text-gray-700">Email:</span>
            <span class="text-gray-900">{user.primaryEmail}</span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="font-medium text-gray-700">User ID:</span>
            <span class="text-gray-900 font-mono text-sm">{user.id}</span>
          </div>
          <div class="flex justify-between py-2 border-b border-gray-100">
            <span class="font-medium text-gray-700">Signed Up:</span>
            <span class="text-gray-900">{signedUpDate}</span>
          </div>
          <div class="flex justify-between py-2">
            <span class="font-medium text-gray-700">Profile Image:</span>
            <div class="flex items-center gap-2">
              {user.profileImageUrl ? (
                <img 
                  src={user.profileImageUrl} 
                  alt="Profile" 
                  class="w-6 h-6 rounded-full"
                />
              ) : (
                <span class="text-gray-500 text-sm">None</span>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Session Information -->
      <div class="bg-white p-6 rounded-lg shadow-md border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900 mb-4 flex items-center gap-2">
          üîë Session Information
        </h2>
        {session ? (
          <div class="space-y-3">
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="font-medium text-gray-700">Session ID:</span>
              <span class="text-gray-900 font-mono text-sm">{session.id}</span>
            </div>
            <div class="flex justify-between py-2 border-b border-gray-100">
              <span class="font-medium text-gray-700">Created:</span>
              <span class="text-gray-900">{sessionCreatedDate}</span>
            </div>
            <div class="flex justify-between py-2">
              <span class="font-medium text-gray-700">Expires:</span>
              <span class="text-gray-900">{sessionExpiresDate}</span>
            </div>
            <div class="mt-4 p-3 bg-green-50 border border-green-200 rounded">
              <p class="text-green-800 text-sm">
                ‚úÖ Session is active and valid
              </p>
            </div>
          </div>
        ) : (
          <div class="p-4 bg-yellow-50 border border-yellow-200 rounded">
            <p class="text-yellow-800 text-sm">
              ‚ö†Ô∏è No session information available
            </p>
          </div>
        )}
      </div>
    </div>

    <!-- Authentication Demo Section -->
    <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-blue-900 mb-4 flex items-center gap-2">
        üöÄ Sprint 003 Features Demonstrated
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <span class="text-green-600">‚úÖ</span>
            <span class="text-blue-800 text-sm">Server-side authentication with <code>requireAuth()</code></span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-green-600">‚úÖ</span>
            <span class="text-blue-800 text-sm">User data access via <code>getUser()</code></span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-green-600">‚úÖ</span>
            <span class="text-blue-800 text-sm">Session information via <code>getSession()</code></span>
          </div>
        </div>
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <span class="text-green-600">‚úÖ</span>
            <span class="text-blue-800 text-sm">Automatic redirect for unauthenticated users</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-green-600">‚úÖ</span>
            <span class="text-blue-800 text-sm">Middleware populating <code>Astro.locals</code></span>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-green-600">‚úÖ</span>
            <span class="text-blue-800 text-sm">Performance optimized with session caching</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="mt-8 flex gap-4">
      <a 
        href="/dashboard" 
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors"
      >
        ‚Üê Back to Dashboard
      </a>
      <a 
        href="/api/user" 
        class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors"
        target="_blank"
      >
        üîå Test API Endpoint
      </a>
    </div>
  </div>
</Layout>

<style>
  code {
    @apply bg-gray-100 px-1 py-0.5 rounded text-sm font-mono;
  }
</style>