---
import Layout from '../layouts/Layout.astro';
import { SignIn } from 'astro-stack-auth/components';
---

<Layout title="Sign In - Astro + Stack Auth">
  <div class="px-4 py-6 sm:px-0">
    <div class="max-w-md mx-auto">
      <div class="bg-white py-8 px-6 shadow rounded-lg">
        <h1 class="text-2xl font-bold text-gray-900 text-center mb-6">
          Sign In to Your Account
        </h1>
        
        <SignIn client:load />
        
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Don't have an account?
            <a href="/signup" class="font-medium text-blue-600 hover:text-blue-500">
              Sign up here
            </a>
          </p>
        </div>
      </div>
      
      <div class="mt-6 text-center">
        <a href="/" class="text-sm text-gray-600 hover:text-gray-900">
          ‚Üê Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>