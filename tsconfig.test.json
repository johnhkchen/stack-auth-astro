{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022", "ES2021", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node", "react", "react-dom", "@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx", 
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "test/**/*",
    "tests/**/*",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}